<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivMarkerInfo"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMarkerName"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMarkerName"
        android:layout_width="148dp"
        android:layout_height="17dp"
        android:background="#99FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="castle name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ivMarkerInfo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivMarkerInfo"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>